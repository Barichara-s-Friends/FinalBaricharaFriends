<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chocolate">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/chocolate"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/picture_image_view"
                android:layout_width="208dp"
                android:layout_height="103dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@null"
                app:layout_constraintBottom_toTopOf="@+id/alias_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/newyork" />

            <TextView
                android:id="@+id/name_text_view"
                style="@style/Texto_titulo"
                android:layout_width="152dp"
                android:layout_height="57dp"
                android:layout_marginTop="16dp"
                android:text="@string/new_york"
                android:textColor="@color/chocolate"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.86"
                app:layout_constraintStart_toEndOf="@+id/picture_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/alias_text_view"
                style="@style/Texto_normal"
                android:layout_width="304dp"
                android:layout_height="166dp"
                android:layout_marginTop="32dp"
                android:text="@string/new_york_description"
                android:textColor="@color/blanchedalmond"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_text_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>